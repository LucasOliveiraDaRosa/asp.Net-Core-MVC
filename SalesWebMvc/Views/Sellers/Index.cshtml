@model IEnumerable<SalesWebMvc.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BithDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th></th>
        </tr>
    </thead>

</table>
<tbody>
    @foreach(var item in Model)
            {
    <tr>
        <td>
            @Html.DisplayFor(modelIem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelIem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelIem => item.BithDate)
        </td>
        <td>
            @Html.DisplayFor(modelIem => item.BaseSalary)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>

            }
</tbody>

